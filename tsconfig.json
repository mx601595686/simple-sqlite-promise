{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "preserveConstEnums": false,
        "experimentalDecorators": false,
        "noEmitOnError": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "removeComments": false,
        "lib": ["esnext"]
    },
    "exclude": ["node_modules", "bin"]
}
